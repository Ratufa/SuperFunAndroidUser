<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/app_logo_new" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    android:background="@drawable/home_box"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/changeLangBtn"
                        android:layout_width="95dp"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|center_horizontal"
                        
                        android:text="@string/change_lang"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#E8792C"
                        android:textSize="@dimen/text_size18"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinLangauge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@null"
                        android:visibility="invisible" />
                </LinearLayout>

                <Button
                    android:id="@+id/howItBtn"
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/home_box"
                    android:gravity="center"
                    android:text="@string/how_to"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#E8792C"
                    android:textSize="@dimen/text_size18"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/participatingCompBtn"
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/home_box"
                    android:gravity="center"
                    android:text="@string/Fun_Fair_Centers"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#E8792C"
                    android:textSize="@dimen/text_size16"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/tab_selector"
                android:padding="5dp"
                android:text="@string/log_in"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size15"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/dontHaveText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/dont_have_new"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5A4612"
                android:textSize="@dimen/text_size15"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/tab_selector"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#000000"
                android:shadowDx="2.5"
                android:shadowDy="2.5"
                android:shadowRadius="1.5"
                android:text="@string/sign_up"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size15"
                android:textStyle="bold" />
            
        </LinearLayout>
        
    </ScrollView>

    <View
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:background="@drawable/footer" />

</LinearLayout>